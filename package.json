{
  "name": "auto-screenshot-tool",
  "version": "1.0.0",
  "description": "自动截图工具，支持定时截图、OCR文字识别、图片搜索和管理",
  "main": "src/main.js",
  "scripts": {
    "start": "npx electron src/main.js",
    "dev": "npx electron src/main.js --dev",
    "build": "npx electron-builder",
    "build:mac": "npx electron-builder --mac",
    "build:win": "npx electron-builder --win",
    "build:linux": "npx electron-builder --linux",
    "build:all": "npx electron-builder --mac --win --linux",
    "pack": "npx electron-builder --dir",
    "release": "npx electron-builder --publish=always"
  },
  "keywords": [
    "screenshot",
    "ocr",
    "electron",
    "desktop",
    "automation",
    "productivity"
  ],
  "author": {
    "name": "Developer",
    "email": "developer@example.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/username/auto-screenshot-tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/auto-screenshot-tool.git"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "fs-extra": "^11.2.0",
    "moment": "^2.30.1",
    "path": "^0.12.7",
    "screenshot-desktop": "^1.15.0",
    "sharp": "^0.34.3"
  },
  "build": {
    "appId": "com.developer.auto-screenshot-tool",
    "productName": "自动截图工具",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!node_modules/@electron/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "zip",
          "arch": ["x64", "ia32"]
        }
      ],
      "publisherName": "Developer",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "category": "Utility",
      "synopsis": "自动截图和图片管理工具",
      "desktop": {
        "Comment": "自动截图工具，支持定时截图、OCR文字识别、图片搜索和管理",
        "Keywords": "screenshot;ocr;automation;productivity;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "自动截图工具"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "自动截图工具安装器"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
